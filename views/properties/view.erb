<h1> View properties </h1>

  <% unless @current_user == nil %>
    <h2>Hello <%= "#{@current_user}" %> </h2>
  <% end %>

<ul style="list-style-type:none;">
<% @properties.each do |property| %>
  <li> <%= property.name %>  
    <ul> 
      <li> Property description: <%= property.description %> </li>
      <li> Price per night: Â£<%= property.price_per_night %> </li>
      <li> Available to book?
       <% if property.available == true %>
        Yes
        <% else %>
        No 
        <% end %> </li>
    </ul>
  </li>
<% end %>
</ul>  

<% if @current_user != nil %>
  <div>
    <a href="/properties/new">
      <button class="btn btn-outline-primary">Add property</button>
    </a>
  </div>
  <% else %>
 <div>
  <a href="/users/new">
    <button class="btn btn-primary">Sign up</button>
  </a>
  <% end %>

  <% if @current_user != nil %>
  <div>
    <form action="/users/logout" method="post">
      <input type="submit" value="Sign out" class="btn btn-primary"/>
    </form>
  </div>

 <% else %>


</div>
